<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyStoryApp" parent="Theme.Material3.DayNight">

        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
        <item name="android:fontFamily">@font/poppins_reguler</item>
        <item name="colorPrimary">@color/navy</item>
        <item name="colorSecondary">@color/purple</item>
        <item name="colorTertiary">@color/navy</item>
        <item name="android:colorBackground">@color/grey</item>
    </style>

    <style name="Theme.MyStoryApp" parent="Base.Theme.MyStoryApp">
        <item name="android:fontFamily">@font/poppins_reguler</item>
        <item name="colorPrimary">@color/navy</item>
        <item name="colorSecondary">@color/purple</item>
        <item name="colorTertiary">@color/navy</item>
        <item name="android:colorBackground">@color/grey</item>
    </style>

    <style name="Theme.MyStoryApp.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.MyStoryApp.AppWidgetContainer" parent="Theme.MyStoryApp.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>